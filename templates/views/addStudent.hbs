  <style>
    /* Center the form and add some padding */
form {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

/* Style form labels */
form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

/* Style form inputs */
form input[type="text"],
form input[type="Roll_no"],
form input[type="number"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
}

/* Style the submit button */
form button[type="submit"] {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

form button[type="submit"]:hover {
    background-color: #0056b3;
}

/* Style the subject and marks fields */
form div.subject-field {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

form div.subject-field label {
    margin-right: 10px;
}

/* Add some margin to the bottom of the form */
form div:last-child {
    margin-bottom: 0;
}

.success-message {
    color: green;
    margin-top: 10px;
}

  </style>
</head>

