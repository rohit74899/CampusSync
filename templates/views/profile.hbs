    <table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Roll No</th>
            <th>Address</th>
            <th>Class</th>
            <th>Marks</th>
            <!-- Add more table headers for other fields as needed -->
        </tr>
        
    </thead>
    <tbody>
        <tr>
            <td>{{student.name}}</td>
            <td>{{student.address}}</td>
            <td>{{student.Roll_no}}</td>
            <td>{{student.class}}</td>
            <td>{{student.subjects.name}}</td>
            <td>
                <ul>
                    {{#each student.subjects}}
                        <li>{{this.name}}: {{this.marks}}</li>
                    {{/each}}
                </ul>
            </td>
            <td>
                <a href="javascript:void(0);" class="btn btn-primary btn-sm" style="color: white; text-decoration: none;" onclick="toggleForm('{{_id}}')">update marks</a>
            </td>
        </tr>
    </tbody>
</table>

<div id="form_{{_id}}" style="display: none;">
    
<form action="/update_marks/{{student._id}}?_method=PATCH" method="POST">
    <div>
        <label for="name">Subject:</label>
        <input type="text" id="name" name="name">
    </div>

    <div>
        <label for="marks">Marks:</label>
        <input type="number" id="marks" name="marks">
    </div>

    <button type="submit">Update</button>
</form>



</div>

<script>
    function toggleForm(id) {
        var form = document.getElementById('form_' + id);
        if (form.style.display === 'none') {
            form.style.display = 'block';
        } else {
            form.style.display = 'none';
        }
    }
</script>

     
  
  
      
    

         
    






  




  



  





