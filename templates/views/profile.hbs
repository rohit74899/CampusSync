<!DOCTYPE html>
<html lang="en">

<head>
  

  {{>head}}
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
/* Common styles for both cards */
.student-cards-container {
  display: grid;
  grid-template-columns: 1fr 1fr; /* Two columns of equal width */
  gap: 20px; /* Gap between columns */
}

.student-info-card,
.marks-update-card {
  padding: 20px;
  border: 1px solid #ccc;
  background-color: #fff;
}

/* Media query for tablets and smaller screens */
@media (max-width: 768px) {
  .student-cards-container {
    grid-template-columns: 1fr; /* Single column stacking on small screens */
  }

  .student-info-card,
  .marks-update-card {
    border: none;
    padding: 10px;
  }
}

/* Media query for mobile phones */
@media (max-width: 576px) {
  .student-cards-container {
    gap: 10px;
  }
}



</style>
</head>

<body>

  <!-- ======= Header ======= -->
  <section id="topbar" class="topbar d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">
      <div class="contact-info d-flex align-items-center">
        <i class="bi bi-envelope d-flex align-items-center"><a href="mailto:contact@example.com"></a></i>
        <i class="bi bi-phone d-flex align-items-center ms-4"><span></span></i>
      </div>
      <div class="social-links d-none d-md-flex align-items-center">
        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
      </div>
    </div>
  </section><!-- End Top Bar -->

  <header id="header" class="header d-flex align-items-center">

    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
      <a href="index.html" class="logo d-flex align-items-center">
        <!-- Uncomment the line below if you also wish to use an image logo -->
        <!-- <img src="assets/img/logo.png" alt=""> -->
        <h1>StudentOcean<span>.</span></h1>
      </a>
      
      {{>navbar}}<!-- .navbar -->

      <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
      <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

    </div>
    
  </header><!-- End Header -->
  <!-- End Header -->

    {{!-- <div>Received doc_id: {{student._id}}</div> --}}
    
    

   <table class="table">
  <thead>
    <h1 >student Info</h1>
  </thead>
  <tbody>
    <tr>
      <td colspan="4"> <!-- Create a single cell spanning 4 columns -->
       <div class="student-cards-container">
        <div class="student-info-card">
          <h3>Name:{{student.name}}</h3>
          <p>Address:{{student.address}}</p>
          <p>Roll No: {{student.Roll_no}}</p>
          <p>Class: {{student.class}}</p>
        </div>
        <div class="marks-update-card">
          <ul>
            {{#each student.subjects}}
              <li>{{this.name}}: {{this.marks}}</li>
            {{/each}}
          </ul>
          

          <a href="javascript:void(0);" class="btn btn-primary btn-sm" style="color: white; text-decoration: none;" onclick="toggleForm('{{_id}}')">Update Marks</a>
          <div id="form_{{_id}}" style="display: none;">
          
                <form action="/update_marks/{{student._id}}?_method=PATCH" method="POST">
                    <div>
                        <label for="name">Subject:</label>
                        <input type="text" id="name" name="name">
                    </div>

                    <div>
                        <label for="marks">Marks:</label>
                        <input type="number" id="marks" name="marks">
                    </div>

                    <button type="submit">Update</button>
                </form>
              </div>
        </div>
              
      </td>
    </tr>
    
  </tbody>
</table>

</div>

<script>
    function toggleForm(id) {
        var form = document.getElementById('form_' + id);
        if (form.style.display === 'none') {
            form.style.display = 'block';
        } else {
            form.style.display = 'none';
        }
    }
    
</script>

     
  
  
      
    

         
    






  




  



  





